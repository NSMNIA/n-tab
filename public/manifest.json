{
    "manifest_version": 2,
    "name": "NTab",
    "short_name": "NTab",
    "version": "0.2.2",
    "description": "NTab is a new tab page that is simple and easy to use.",
    "chrome_settings_overrides": {
        "homepage": "index.html"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "web_accessible_resources": ["index.html"],
    "icons": {
        "32": "icons/32.png",
        "48": "icons/48.png",
        "96": "icons/96.png",
        "128": "icons/128.png"
    },
    "permissions": ["storage"]
}
